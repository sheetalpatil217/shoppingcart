<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaymentActivityHome"
    android:id="@+id/container_payment">

    <LinearLayout
        android:id="@+id/waiting_group"
        android:layout_width="match_parent"
        android:layout_height="237dp">

        <TextView
            android:id="@+id/payment_activity_wait_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="356dp"
            android:text="We are trying to contact server to get token! please wait!" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payment_group"
        android:layout_width="409dp"
        android:layout_height="385dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="176dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="385dp"
            android:layout_height="53dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="109dp"
            android:text="Checkout"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/payment_activity_amount_editText"
            android:layout_width="316dp"
            android:layout_height="67dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="64dp"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <Button
            android:id="@+id/payment_activity_pay_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="151dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="124dp"
            android:text="Pay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_activity_amount_editText" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>