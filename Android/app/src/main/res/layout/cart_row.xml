<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/product_price_cart"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="11dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/product_name_cart"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_name_cart"
        android:layout_width="159dp"
        android:layout_height="28dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/prodImage_cart"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/prodImage_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder_image" />
</androidx.constraintlayout.widget.ConstraintLayout>
